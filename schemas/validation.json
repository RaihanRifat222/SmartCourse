{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["validation"],
  "properties": {
    "validation": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["approved", "revise"]
        },
        "issues": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "description", "severity"],
            "properties": {
              "type": { "type": "string" },
              "description": { "type": "string" },
              "severity": {
                "type": "string",
                "enum": ["low", "medium", "high"]
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
