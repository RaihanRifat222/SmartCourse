{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["topic", "audience", "learning_goals", "constraints"],
  "properties": {
    "topic": {
      "type": "string",
      "minLength": 3
    },
    "audience": {
      "type": "object",
      "required": ["role", "prior_knowledge"],
      "properties": {
        "role": { "type": "string" },
        "prior_knowledge": { "type": "string" },
        "seniority": { "type": "string" }
      },
      "additionalProperties": false
    },
    "learning_goals": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "constraints": {
      "type": "object",
      "required": ["duration_hours", "depth"],
      "properties": {
        "duration_hours": { "type": "number", "minimum": 0.5 },
        "depth": { "type": "string" },
        "tone": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
